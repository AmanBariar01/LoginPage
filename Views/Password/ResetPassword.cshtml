@model LoginPage.Models.ViewModels.PasswordViewModel

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0; background-color: #f8f9fa;">
    <form method="post" style="border: 1px solid #ccc; padding: 30px; display: flex; flex-direction: column; align-items: center; width: 80%; max-width: 500px; background-color: #ffffff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

        <h2 style="text-align: center; color: #007bff; margin-bottom: 20px;">Reset Password</h2>

        <input asp-for="ResetToken" type="hidden" />

        <div class="form-group mb-3" style="width: 100%;">
            <label for="NewPassword" class="form-label">New Password :</label>
            <input asp-for="NewPassword" class="form-control" id="NewPassword" placeholder="Enter new password" style="height: 50px; font-size: 18px; color: #495057; border: 1px solid #ced4da; border-radius: 4px; padding: 0 12px; margin-bottom: 10px; width: 100%;" />
            <span asp-validation-for="NewPassword" class="text-danger" style="font-size: 16px;"></span>
        </div>

        <div class="form-group mb-3" style="width: 100%;">
            <label for="ConfirmPassword" class="form-label">Confirm Password :</label>
            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm your password" style="height: 50px; font-size: 18px; color: #495057; border: 1px solid #ced4da; border-radius: 4px; padding: 0 12px; margin-bottom: 20px; width: 100%;" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 16px;"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block" style="height: 50px; font-size: 18px; border: none; border-radius: 4px; cursor: pointer; width: 100%;">Reset Password</button>
    </form>
</div>
