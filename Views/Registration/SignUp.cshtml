@model User

<div style="display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0; background-color: #f8f9fa;">
    <form method="post" style="border: 1px solid #ccc; padding: 30px; display: flex; flex-direction: column; align-items: center; width: 80%; max-width: 500px; background-color: #ffffff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

        <h2 style="text-align: center; color: #007bff; margin-bottom: 20px;">Sign Up</h2>

        <div class="form-group mb-3" style="width: 100%;">
            <label for="UserName" class="form-label">Username :</label>
            <input asp-for="UserName" class="form-control" id="UserName" placeholder="Enter your username" style="height: 50px; font-size: 18px; color: #495057; border: 1px solid #ced4da; border-radius: 4px; padding: 0 12px; margin-bottom: 10px; width: 100%;" />
            <span asp-validation-for="UserName" class="text-danger" style="font-size: 16px;"></span>
        </div>

        <div class="form-group mb-3" style="width: 100%;">
            <label for="Email" class="form-label">Email :</label>
            <input asp-for="Email" class="form-control" id="Email" placeholder="Enter your email" style="height: 50px; font-size: 18px; color: #495057; border: 1px solid #ced4da; border-radius: 4px; padding: 0 12px; margin-bottom: 10px; width: 100%;" />
            <span asp-validation-for="Email" class="text-danger" style="font-size: 16px;"></span>
        </div>

        <div class="form-group mb-3" style="width: 100%;">
            <label for="Password" class="form-label">Password :</label>
            <input asp-for="Password" class="form-control" id="Password" placeholder="Enter your password" style="height: 50px; font-size: 18px; color: #495057; border: 1px solid #ced4da; border-radius: 4px; padding: 0 12px; margin-bottom: 10px; width: 100%;" />
            <span asp-validation-for="Password" class="text-danger" style="font-size: 16px;"></span>
        </div>

        <div class="form-group mb-3" style="width: 100%;">
            <label for="ConfirmPassword" class="form-label">Confirm Password :</label>
            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm your password" style="height: 50px; font-size: 18px; color: #495057; border: 1px solid #ced4da; border-radius: 4px; padding: 0 12px; margin-bottom: 20px; width: 100%;" />
            <span asp-validation-for="ConfirmPassword" class="text-danger" style="font-size: 16px;"></span>
        </div>

        <button type="submit" class="btn btn-danger btn-block" style="height: 50px; font-size: 18px; border: none; border-radius: 4px; cursor: pointer; margin-bottom: 10px; width: 100%;">Create Account</button>

        <a asp-controller="Login" asp-action="Login" class="btn btn-success btn-block align-text-center" 
                    style="height: 50px; font-size: 18px; border: none; border-radius: 4px; cursor: pointer; width: 100%;">Already have an Account? Login</a>
    </form>
</div>
